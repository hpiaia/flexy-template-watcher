{
  "compilerOptions": {
    "outDir": "./dist/",
    "lib": ["es2023", "dom"],
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noImplicitAny": false,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
