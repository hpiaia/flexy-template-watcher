{% extends 'FlexyFtwoStoreBundle:Layout:base.html.twig' %}

{% import "FlexyFtwoStoreBundle:Components:forms.html.twig" as forms %}

{% block content %}
    {% include 'FlexyFtwoStoreBundle:Include:breadcrumbs.html.twig' with { path : [ { 'title' : 'Criar minha conta' } ] } %}

    <div class="container mt-12 md:mt-0">
        <h1 class="text-3xl font-bold leading-tight tracking-tight text-gray-900">
            Fale conosco
        </h1>

        <div class="mt-12">
            <div class="max-w-2xl mx-auto text-center">
                <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
                    Entre em contato conosco
                </h2>
                
                <p class="mt-2 text-lg leading-8 text-gray-600">
                    Adoraríamos ouvir de você! Preencha o formulário
                    abaixo e entraremos em contato o mais breve possível.
                </p>
            </div>
            
            {% include 'FlexyFtwoStoreBundle:Contact:contact-form.html.twig' with { form: form, shoppingStore: shoppingStore } %}
        </div>
    </div>
{% endblock %}
